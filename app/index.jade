doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Super Calc
    link(rel='stylesheet', href='css/app.css')
  body
    ul#navbar
      li
        a.navlinks(href='http://kelleystephens.com') Home
      li
        a.navlinks(href='#') About
      li
        a.navlinks(href='#') Portfolio
      li
        a.navlinks(href='#') Contact
    h1#title Welcome to the Super Calculator!
    table#calculator
      tbody
        tr
          td#display(colspan=5) 0
        tr
          td.number.button 7
          td.number.button 8
          td.number.button 9
          td.operator.button +
          td.operator.button Σ
        tr
          td.number.button 4
          td.number.button 5
          td.number.button 6
          td.operator.button -
          td.operator.button x<sup>y</sup>
        tr
          td.number.button 1
          td.number.button 2
          td.number.button 3
          td.operator.button x
          td.operator.button √
        tr
          td.number.button 0
          td.decimal.button .
          td.sign.button +-
          td.operator.button ÷
          td.operator.button !
        tr
          td.clear.button(colspan=2) CB
          td.clear.button C
          td.button#push(colspan=2) Push


    script(src='js/vendor/jquery-2.1.0.js')
    script(src='js/source/main.js')
